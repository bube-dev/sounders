<%= form_with(model: @booking, data: {turbo: false}) do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :"Phone Number" %>
    <%= f.telephone_field :phone_no, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :"Check In" %>
    <%= f.date_field :check_in, class: 'form-control' %>

    <%= f.label :"Check Out" %>
    <%= f.date_field :check_out, class: 'form-control' %>

    <%= f.radio_button :room_id, 1 %>
    <%= f.label :room_type, "Single" %>

    <%= f.radio_button :room_id, 2 %>
    <%= f.label :room_type, "Double" %>

    <%= f.radio_button :room_id, 3 %>
    <%= f.label :room_type, "Master" %>



    <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>